<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".homefrag.MainActivity"
    android:id="@+id/main"
    android:background="@drawable/homebg"
    android:contentDescription="Calculate Profit Of CFD"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="15dp"
            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/hometitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="✧ 交易计算器 ✧*:･ﾟ"
                android:textColor="#84A1FF"
                android:textStyle="bold"
                android:gravity="start"
                android:textSize="21sp"
                android:paddingStart="20dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/fake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                app:icon="@drawable/fake"
                app:iconTint="#84A1FF"
                app:iconSize="30dp"
                app:strokeWidth="0dp"
                app:backgroundTint="@android:color/transparent"
                android:clickable="true"
                android:paddingHorizontal="2dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/yx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                app:icon="@drawable/atomic"
                app:iconTint="#84A1FF"
                app:iconSize="26dp"
                app:strokeWidth="0dp"
                app:backgroundTint="@android:color/transparent"
                android:clickable="true"
                android:paddingHorizontal="2dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/homeMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                app:icon="@drawable/menu"
                app:iconTint="#84A1FF"
                app:iconSize="26dp"
                app:strokeWidth="0dp"
                app:backgroundTint="@android:color/transparent"
                android:layout_marginEnd="15dp"
                android:clickable="true"
                android:paddingHorizontal="2dp"
                />
        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            app:tabTextColor="#84A1FF"
            app:tabSelectedTextColor="#50B2FF"
            app:tabIndicatorColor="#48AFFF"
            app:tabMode="scrollable"
            app:tabRippleColor="@android:color/transparent"
            android:background="@android:color/transparent"
            />
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>
