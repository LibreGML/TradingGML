<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@android:color/white"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ﾟ･:*✧ 密码详情 ✧*:･ﾟ"
            android:textSize="20sp"
            android:textColor="#84A1FF"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="平台名称:"
                android:textSize="16sp"
                android:textColor="#7CA1FF"
                android:layout_marginBottom="4dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/detailPlatform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="平台名称"
                android:textSize="14sp"
                android:textColor="#6FBBFF"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="账户:"
                android:textSize="16sp"
                android:textColor="#7CA1FF"
                android:layout_marginBottom="4dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/detailAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="账户"
                android:textSize="14sp"
                android:textColor="#6FBBFF"
                android:textStyle="bold"
                android:textIsSelectable="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="密码:"
                android:textSize="16sp"
                android:textColor="#7CA1FF"
                android:layout_marginBottom="4dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/detailPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textSize="14sp"
                android:textColor="#6FBBFF"
                android:textStyle="bold"
                android:textIsSelectable="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="备注:"
                android:textSize="16sp"
                android:textColor="#7CA1FF"
                android:layout_marginBottom="4dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/detailNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="这是一个备注示例，可以显示更长的内容以验证布局的完整性。"
                android:textSize="14sp"
                android:textColor="#6FBBFF"
                android:textStyle="bold"
                android:textIsSelectable="true"
                />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/closeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="关闭"
            app:backgroundTint="#84A1FF"
            app:cornerRadius="12dp"
            android:textColor="@android:color/white"
            />

    </LinearLayout>

</LinearLayout>